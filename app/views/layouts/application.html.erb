<!DOCTYPE html>
<html>
<head>
  <title><%= WEB_TITLE %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application", "modernizr", "cart" %>
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"></script>
 
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="container">
    <header>
        <div id="logo">
        	<h1><% link_to image_tag("logo.jpg", :height=>"75"), products_index_path %></h1>
        </div>   
	
		<div id="keywordSearchForm">
		  <% form_tag products_search_path, :method => :get do %>
		    <% text_field_tag :search, (params[:search] ? params[:search] : '' ) %>
		    <% submit_tag 'Search', :id => "search_button" %>
		  <% end %>
		</div>
    </header>
	

  	<div class="main">
			<%= yield %>
  	</div>
  </div>
	<div id="footerSlideContainer">
	  <div id="footerSlideButton"></div>
	  <div id="footerSlideContent">
		  <%= render 'collections/show' %>
	  </div>
	</div>
	
</body>
</html>
